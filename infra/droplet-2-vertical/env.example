# Droplet 2 - Construction Vertical
# Copy to .env and fill in values

#------------------------------------------------------------------------------
# Infrastructure Host (Droplet 3 IP)
#------------------------------------------------------------------------------
INFRA_HOST=10.0.0.3

#------------------------------------------------------------------------------
# Database (credentials must match Droplet 3)
#------------------------------------------------------------------------------
POSTGRES_USER=basecommerce
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=basecommerce

#------------------------------------------------------------------------------
# Application
#------------------------------------------------------------------------------
SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS
ENVIRONMENT=production
DEBUG=false
APP_PORT=8000

#------------------------------------------------------------------------------
# Performance (tuned for 1GB RAM)
#------------------------------------------------------------------------------
GUNICORN_WORKERS=2
GUNICORN_THREADS=1
GUNICORN_TIMEOUT=60

SQLALCHEMY_POOL_SIZE=5
SQLALCHEMY_MAX_OVERFLOW=10

#------------------------------------------------------------------------------
# CORS (Droplet 1 Edge domain)
#------------------------------------------------------------------------------
CORS_ORIGINS=https://basecommerce.com.br,https://*.basecommerce.com.br

